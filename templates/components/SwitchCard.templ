package components

type SwitchCardProps struct {
	Title       string
	Description string
	ImageSrc    string
	ImageAlt    string
}

templ SwitchCard(props SwitchCardProps) {
	<div class="switch-card">
		@Image(ImageProps{
			Src:      props.ImageSrc,
			Alt:      props.ImageSrc,
			IsSquare: true,
		})
		<h2>{ props.Title }</h2>
		<p>{ props.Description }</p>
	</div>
}
